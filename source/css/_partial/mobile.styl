@media mq-mobile
  #mobile-nav
    position: absolute
    top: 0
    left: 0
    width: mobile-nav-width
    height: 100%
    background: color-mobile-nav-background
    // border-right: 1px solid #fff

@media mq-mobile
  .mobile-nav-link
    display: block
    color: #fff
    text-decoration: none
    padding: 15px 20px
    font-weight: bold
    // border-left: 7px solid #09c
    border-top: 7px solid color-background
    border-right: 7px solid color-link
    background: color-scarf
    &:hover
      color: #fff
      background: color-bootlace
      // border-left: 7px solid #ffc200
      border-right: 7px solid #f18c1e
      border-top: 35px solid color-background
